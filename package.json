{

  "name": "spectre-server",
  "version": "1.0.2",
  "description": "Server component for the SPECTRE system",
  "main": "app.js",
  "scripts": {
    "test": "mocha ./tests --recursive --exit -r esm",
    "test-g": "mocha ./tests --recursive --exit -r esm -g",
    "server": "nodemon -r esm server.js",
    "client": "yarn --cwd client start",
    "client-start": "yarn --cwd client start",
    "client-build": "NODE_ENV=production yarn --cwd client build",
    "build-prod": "NODE_ENV=production yarn run server",
    "prepbuild-prod": "NODE_ENV=production yarn run client-build",
    "start": "concurrently --kill-others-on-fail \"yarn run server\" \"yarn run client-start\"",
    "full-install": "yarn install && yarn --cwd client install",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false yarn --cwd client install && yarn --cwd client run build"
  },
  "author": "daniel howe",
  "dependencies": {
    "archiver": "^3.0.0",
    "basic-auth": "~2.0.0",
    "body-parser": "^1.19.0",
    "chai-fs": "^2.0.0",
    "chai-string": "^1.5.0",
    "cors": "^2.8.5",
    "debug": "4.1.1",
    "depd": "~2.0.0",
    "dotenv": "^8.0.0",
    "dotenv-extended": "^2.4.0",
    "esm": "^3.2.25",
    "express": "^4.17.1",
    "express-basic-auth": "^1.2.0",
    "form-data": "^3.0.0",
    "json-loader": "^0.5.7",
    "lodash": "^4.17.13",
    "mongodb": "^3.4.1",
    "mongoose": "^5.8.2",
    "morgan": "^1.9.1",
    "multer": "^1.4.1",
    "on-finished": "~2.3.0",
    "on-headers": "~1.0.1",
    "sync-request": "^6.1.0"
  },
  "homepage": ".",
  "license": "UNLICENSED",
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "concurrently": "^5.0.2",
    "mocha": "^6.1.4",
    "nodemon": "^2.0.2"
  }
}
